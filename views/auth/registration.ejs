<head>
  <title>Registration</title>
  <link rel="stylesheet" href="/css/auth.css" />
</head>

<body>
  <div class="wrapper">
    <div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card border-0 shadow rounded-3 my-5">
            <div class="card-body p-4 p-sm-5">
              <h3 class="card-title text-center mb-5 fs-5">Регистрация</h3>
              <form class="form-active" action="/reg-check" method="post">
                <div class="form-floating mb-3">
                  <input
                    name="uin"
                    type="number"
                    class="form-control-custom form-control"
                    id="floatingInput"
                  />
                  <label for="floatingInput">ИИН</label>
                </div>

                <div class="d-grid">
                  <button class="btn btn-primary btn-block" type="submit">
                    Продолжить
                  </button>
                </div>
                <hr class="my-4" />
                <div class="col text-center">
                  <a href="/auth" class="ml-2 text-decoration-none text-muted"
                    >Уже есть аккаунт?</a
                  >
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
