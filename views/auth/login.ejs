<head>
  <title>Login</title>
  <link rel="stylesheet" href="/css/auth.css" />
</head>

<body>
  <div class="wrapper">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card border-0 shadow rounded-3 my-5">
          <div class="card-body p-4 p-sm-5">
            <h3 class="card-title text-center mb-5 fs-5">Войти</h3>
            <form action="/auth" method="post">
              <div class="form-floating mb-3">
                <input
                  name="uin"
                  type="number"
                  class="form-control form-control-custom"
                  id="floatingNumber"
                />

                <label for="floatingNumber">ИИН</label>
              </div>

              <div class="form-floating mb-3">
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  id="floatingPassword"
                />
                <i class="bi bi-eye-slash" id="togglePassword"></i>
                <label for="floatingPassword">Пароль</label>
              </div>

              <div class="d-grid">
                <button class="btn btn-primary btn-block" type="submit">
                  Дальше
                </button>
              </div>
              <hr class="my-4 cursor-none" />
              <!--
              <div class="col text-center">
                <a
                  href="/auth/passwordRecovery"
                  class="ml-2 text-decoration-none text-muted"
                  >Забыли пароль?</a
                >
              </div>
            --></form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/auth/numeric-input.js"></script>
  <script src="/js/auth/password-toggler.js"></script>
</body>
